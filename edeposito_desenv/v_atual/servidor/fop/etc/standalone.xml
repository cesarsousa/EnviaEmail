<standalone>
        <jvm>
                <level>1.4</level>
                <vendor>ibm</vendor>
                <args>
                        <arg name="ms" value="${JVM_MINHEAP}"/>
                        <arg name="mx" value="${JVM_MAXHEAP}"/>
                </args>
                <sysProperties>
                        <!-- 
                        JVM System properties:
                        <property name="java.security.policy" value="/.java.policy" />
                        <property name="sun.rmi.transport.tcp.readTimeout" value="600000"/>
                        -->
                        <property name="java.io.tmpdir" value="${_JVM_TMP_IO_DIR}"/>
                </sysProperties>
        </jvm>

        <!-- uses Ant syntax to construct common classpath -->
        <classpath>
            <!-- according to the docu lib dir and config 
                should already be in the path, but they don't -->
            <fileset dir="config"/>
            <fileset dir="lib">
                <include name="**/*.jar"/>
            </fileset>
        </classpath>

        <process label="main">
                <extraClassPath>
                    <!-- according to the docu lib dir and config 
                        should already be in the path, but they don't -->
                    <fileset dir="config"/>
                    <fileset dir="lib">
                        <include name="**/*.jar"/>
                    </fileset>
                </extraClassPath>
                <start>
                    <class>org.epoline.tda.pdexchange.Starter</class>
                    <sysProperties>
                            <property
                                name="javax.xml.parsers.SAXParserFactory"
                                value="org.apache.xerces.jaxp.SAXParserFactoryImpl"/>
                            <property
                                name="java.security.manager"
                                value=""/>
                            <property
                                name="java.security.policy"
                                value="${APPL_HOME}/config/all.policy"/>
                    </sysProperties>
                    <!--
                    Arguments passed over to the application
                    <args>
                        <arg>arg1</arg>
                        <arg>arg2</arg>
                        <arg>arg3</arg>
                    </args>
                    -->
                </start>
        </process>
</standalone>
